<%= form_tag sessions_path , {class: 'navbar-form navbar-right', role: 'search'} do %>
	<div class="form-group">
      <%= email_field_tag :email, params[:email], class: 'form-control', autofocus: true, placeholder: 'email'%>
  </div>

	<div class="form-group">
      <%= password_field_tag :password, nil , class: 'form-control',  placeholder: 'password' %>
  </div>
  <% hidden_field_tag :referer, (params[:referer] || request.env['HTTP_REFERER']) %>
<%= submit_tag "Log In", class: "btn btn-default" %>
<% end %>
