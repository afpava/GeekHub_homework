
<p id="notice"><%= notice %></p>

  <div class="container">
  <div class="col-sm-9">
    <div class="panel panel-default">
      <div class="panel-heading">
          <strong>Products:</strong>
          <%= @product.name %>
      </div>
      <div class="panel-body">
        <strong>Image:</strong>
        <%= @product.image %>
      </div><!-- /panel-body -->
    </div><!-- /panel panel-default -->
<!-- /col-sm-5 -->

</p>

<tr class="container-fluid">
        <td><%= link_to 'Back', category_path(@product.category.id) , :class=>'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_product_path(@product), :class=>'btn btn-default' %></td>
        <td><%= link_to 'Delete', product_path(@product), :class=>'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>

<div>
<h3>Suppliers</h3>
    <% @product.suppliers.each do |supplier| %>
          <div class="container">
          <div class="col-sm-5">
              <div class="panel panel-default">
              <div class="panel-heading">
            <strong><%= link_to supplier.name, supplier%></strong>

              </div>
              <div class="panel-body">
            <p><%= supplier.image %></p>

            <p><%= link_to 'Delete', supplier_path(supplier), method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div><!-- /panel-body -->
          </div><!-- /panel panel-default -->
          </div><!-- /col-sm-5 -->
        </div>
    <% end %>

<%= render 'suppliers/form' %>
</div>
</div>
</div>
