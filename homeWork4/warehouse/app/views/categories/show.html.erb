
<p id="notice"><%= notice %></p>

  <div class="container">
  <div class="col-sm-9">
    <div class="panel panel-default">
      <div class="panel-heading">
          <strong>Category:</strong>
          <%= @category.name %>
      </div>
      <div class="panel-body">
        <div class="col-md-12">
          <div class="pull-left col-md-4 col-xs-12 thumb-image">
            <p><%= image_tag(@category.image.url, alt: 'Image', :class =>'center-block img-responsive') if @category.image? %></p>
          </div>
        </div>

<tr class="container-fluid">
  <% if current_user %>
        <td><%= link_to 'Edit', edit_category_path(@category), :class=>'btn btn-default' %></td>
        <td><%= link_to 'Delete', category_path(@category), :class=>'btn btn-danger pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>

        </div><!-- /panel-body -->
    </div><!-- /panel panel-default -->
<!-- /col-sm-5 -->
<td><%= link_to 'Back', store_path(@category.store.id) , :class=>'btn btn-default' %></td>
<div>
<h3><%= 'Products:' if @category.products.any? %> </h3>
    <% @category.products.each do |product| %>
          <div class="container">
          <div class="col-sm-5">
              <div class="panel panel-default">
              <div class="panel-heading">
            <strong><%= link_to product.name, product%></strong>

              </div>
            <div class="panel-body">
              <div class="col-md-12">
                <div class="pull-left col-md-4 col-xs-12 thumb-image">
                    <p><%= image_tag(product.image.url, alt: 'Image', :class =>'center-block img-responsive') if product.image? %></p>
                </div>
              </div>
                <tr class="container-fluid">
                  <% if current_user %>
                    <td><%= link_to 'Edit', edit_product_path(product),  :class=>'btn btn-default'  %></td>
                    <td><%= link_to 'Delete', product_path(product), :class=>'btn btn-danger pull-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
          </div><!-- /panel-body -->
          </div><!-- /panel panel-default -->
          </div><!-- /col-sm-5 -->
        </div>
    <% end %>
    <% if current_user %>
<h3> Create Product:</h3>
<%= render 'products/form' %>
<% end %>
</div>
</div>
</div>
