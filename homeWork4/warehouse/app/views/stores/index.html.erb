<h1>Stores</h1>
<p id="notice"><%= notice %></p>
<div class="container">
<% @stores.each do |store| %>
  <div class="left-panel">
        <div class="col-xs-12 col-sm-6 col-lg-8">
    	    <div class="panel panel-default">
    		    <div class="panel-body">
    				<div class="col-md-12">

    						<h2><%= link_to store.name, store %></h2>
    						<p><%= store.image %></p>

              </div>
            </div>
          </div>

        </div>
      </div>
  <% end %>

</div>
<div class="container">
          <%= link_to 'New store', new_store_path, :class=>'btn btn-default' %>
</div>
