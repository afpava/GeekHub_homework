<h1>Editing Country</h1>
<div class="container">

  <div class="card-body">
    <div class="col-md-12">
      <div class="float-left col-md-4 col-xs-12 thumb-image">
        <p><%= image_tag(@country.image.url, alt: 'Image', :class =>'d-block mx-auto img-responsive') if @country.image? %></p>
      </div>
    </div>
  </div>
    <%= render 'form', country: @country %>

      <tr class="container-fluid pull-right">

              <td><%= link_to 'Back', root_url, :class=>'btn btn-outline-secondary', data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Show', @country, :class=>'btn btn-outline-secondary' %></td>
      </tr>
</div>
