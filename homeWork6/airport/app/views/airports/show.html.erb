  <%#= link_to 'New category', categories_path(country_id: @country.id), method: :post, :class=>'btn btn-default' %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-2 white-text text-center text-md-left">
        <div class="card">
          <div class="card-heading">
            <strong>Airports:</strong>
            <%= @airport.name %>
          </div>
          <div class="card-body">
            <div class="col-md-12">
              <div class="float-left col-md-4 col-xs-12 thumb-image">
                <p><%= image_tag(@airport.image.url, alt: 'Image', :class =>'center-block img-responsive') if @airport.image? %></p>
              </div>
            </div>
            <tr>
              <%# if current_user %>
              <td><%= link_to 'Edit', edit_city_airport_path(@airport.city, @airport), :class=>'btn btn-light' %></td>
              <td><%= link_to 'Delete', [@airport.city, @airport], :class=>'btn btn-danger float-right', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <%# end%>
            </tr>
          </div><!-- /card-body -->
        </div><!-- /card card-default -->
        <td><%= link_to 'Back', city_path(@city) , :class=>'btn btn-light' %></td>
        <!-- /col-sm-5 -->
      </div>

<div class="col-md-8 col-xl-5 mb-4">

<h3><%= 'Planes:' if @airport.planes.any? %></h3>
<%= render partial: 'shared/list', :locals => { elements: @airport.planes, edit_link: "edit_airport_planes", country: "airport"} %>

  <%# if current_user %>

    <h3>Create Plane</h3>

    <%#= render 'shared/form', city: @country.cities.build %>
    <%= render partial: 'shared/form', :locals => { parent: @airport, pl_text: "Plane", children: @airport.planes.build} %>

  <%# end %>

  <%#= render 'categories/form' category: @country.categories.build %>
    </div>
  </div>
</div>
